<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/wallpaper"
    android:orientation="vertical"
    tools:context="com.shrewd.develop.updates2k19.Activity.RegistrationActivity">

    <ScrollView
        android:background="@color/light_grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_30sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/register"
                android:textColor="#fff"
                android:textSize="@dimen/_25sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_35sdp"
                android:text="First name"
                android:textColor="#fff"
                android:textSize="@dimen/_15sdp" />

            <EditText
                android:id="@+id/etFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Last name"
                android:textColor="#fff"
                android:textSize="@dimen/_15sdp" />

            <EditText
                android:id="@+id/etLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="College name"
                android:textColor="#fff"
                android:textSize="@dimen/_15sdp" />

            <EditText
                android:id="@+id/etCollege"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enrolment Number"
                android:textColor="#fff"
                android:textSize="@dimen/_15sdp" />

            <EditText
                android:id="@+id/etEnrolment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Mobile no."
                android:textColor="#fff"
                android:textSize="@dimen/_15sdp" />

            <EditText
                android:id="@+id/etMobileNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Gender"
                android:textColor="#fff"
                android:textSize="@dimen/_15sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/rdoGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rbtnMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:textColor="#fff" />

                    <RadioButton
                        android:id="@+id/rbtnFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_50sdp"
                        android:text="Female"
                        android:textColor="#fff" />

                </RadioGroup>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Year"
                android:textColor="#fff"
                android:textSize="@dimen/_15sdp" />

            <RadioGroup
                android:id="@+id/rdoYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbtn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="#fff" />

                <RadioButton
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:id="@+id/rbtn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="#fff" />

                <RadioButton
                    android:id="@+id/rbtn3"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="#fff" />

                <RadioButton
                    android:id="@+id/rbtn4"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textColor="#fff" />

            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Department"
                android:textColor="#fff"
                android:textSize="@dimen/_15sdp" />

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                android:id="@+id/spnDepartment"
                android:layout_width="wrap_content"
                app:hintText="-- Select Department --"
                android:layout_gravity="center"
                android:entries="@array/department"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_height="@dimen/_30sdp" />

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_submit_button"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
